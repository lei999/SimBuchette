<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ter.app.applicationtest.FenetresActivity.Nom_Eleve">


    <EditText
        android:id="@+id/nom"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/texte"
        android:text="Entrer Nom :" android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/nom"/>

    <Button
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nom"
        android:layout_alignBottom="@id/nom"
        android:textSize="25sp"
        android:text="OK"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_above="@id/texte"
        android:layout_centerInParent="true"
        android:text="1"/>
</RelativeLayout>
